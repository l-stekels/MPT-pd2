{% extends 'base.html.twig' %}

{% block main %}
    <h1>Komandas</h1>
    <table class="table table-striped table-middle-aligned table-hover">
        <thead>
        <tr>
            <th scope="col">Vieta</th>
            <th scope="col">Komandas nosaukums</th>
            <th scope="col">Punkti</th>
            <th scope="col">Uzvaras pamatlaikā</th>
            <th scope="col">Zaudējumi pamatlaikā</th>
            <th scope="col">Uzvaras papildlaikā</th>
            <th scope="col">Zaudējumi papildlaikā</th>
            <th scope="col">Gūtie vārti</th>
            <th scope="col">Zaudētie vārti</th>
        </tr>
        </thead>
        <tbody>
            {% for stat in statistics %}
                <tr>
                    <td>{{ stat.place }}</td>
                    <td>{{ stat.name }}</td>
                    <td class="text-center">{{ stat.points }}</td>
                    <td class="text-center">{{ stat.onTimeWins }}</td>
                    <td class="text-center">{{ stat.onTimeLoses }}</td>
                    <td class="text-center">{{ stat.overTimeWins }}</td>
                    <td class="text-center">{{ stat.overTimeLoses }}</td>
                    <td class="text-center">{{ stat.goalsScored }}</td>
                    <td class="text-center">{{ stat.goalsLost }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">Rezultāti nav pieejami, ielādē failus, lai aprēķinātu jaunus rezultātus</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <h1>Spēlētāji</h1>
    <table class="table table-striped table-middle-aligned table-hover">
        <thead>
        <tr>
            <th scope="col">Vieta</th>
            <th scope="col">Vārds</th>
            <th scope="col">Uzvārds</th>
            <th scope="col">Nr</th>
            <th scope="col">Komanda</th>
            <th scope="col">Gūtie vārti</th>
            <th scope="col">Rezultatīvās piespēles</th>
        </tr>
        </thead>
        <tbody>
            {% for stat in players %}
                <tr>
                    <td>{{ stat.place }}</td>
                    <td>{{ stat.firstName }}</td>
                    <td>{{ stat.lastName }}</td>
                    <td class="text-center">{{ stat.number }}</td>
                    <td>{{ stat.team }}</td>
                    <td class="text-center">{{ stat.goals }}</td>
                    <td class="text-center">{{ stat.assists }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">Spēlētēju statistika nav pieejama</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block sidebar %}
    <div class="section actions">
        <a href="{{ path('upload') }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-plus" aria-hidden="true"></i> Pievienot failus
        </a>
    </div>

    {{ parent() }}
{% endblock %}
